#!/bin/bash

user="$(whoami)"
host="$(hostname)"
os="$(uname -o)"
kernel="$(uname -sr)"
uptime="$(uptime -p)"
shell="$(echo $SHELL)"
echo -E "         _nnnn_         ${user}@${host}"
echo -E "        dGGGGMMb        Operating system: ${os}"
echo -E "       @p~qp~~qMb       Kernel: ${kernel}"
echo -E "       M|@||@) M|n      Uptime: ${uptime}"
echo -E "       @,----.JM|       Shell: ${shell}"
echo -E "      JS^\__/  qKL      "
echo -E "     dZP        qKRb   "
echo -E "     dZP          qKKb "
echo -E "   fZP            SMMb"
echo -E "   HZM            MMMM"
echo -E "   FqM            MMMM"
echo -E "  __| .        |\dSML"
echo -E " |    ..       |  Zq"
echo -E " _)      â€¢ .___.|    ."
echo -E " \______)MMMMMP|     /"
echo -E "               |___ /"
